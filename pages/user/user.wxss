/* pages/user/user.wxss */

page {
  background: #eee;
}

.user-head {
  width: 100%;
  height: 250rpx;
  position: relative;
  /* overflow: hidden; */
}

.user-head::after {
  content: "";
  background: #333999;
  display: block;
  width: 100%;
  position: absolute;
  height: 600rpx;
  border-radius: 50%;
  bottom: 0;
  z-index: -1;
}

.user-image {
  background: skyblue;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 65%;
  transform: translate(-50%);
  box-shadow: 1rpx 1rpx 10rpx rgba(128, 128, 128, 0.4);
  border: 1px solid rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.user-seeting {
  width: 600rpx;
  margin: 0 auto;
  margin-top: 150rpx;
}

.nav-public {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  background: white;
  margin-top: 20rpx;
  border-radius: 10rpx;
  letter-spacing: 2rpx;
  box-shadow: 1rpx 1rpx 10rpx rgba(128, 128, 128, 0.4);
  text-align: left;
  line-height: 50rpx;
  font-size: 34rpx;
  color: #333;
}

.login-public {
  width: 100%;
  height: 100%;
  
}

.not-login {
  background: transparent;
  border: 0 solid transparent;
  line-height: 150rpx;
  text-align: center;
}

.user-name{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: -115rpx;
}