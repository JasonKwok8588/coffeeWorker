/* pages/home/home.wxss */

swiper, swiper-item, swiper-item {
  width: 100%;
  height: 500rpx;
}

image {
  width: 100%;
  height: 100%;
}

scroll-view {
  width: 100%;
}

/* ----------------------------------------         头部样式 开始 */

.head-banner {
  position: relative;
}

.head-swiper image {
  display: inline-block;
  width: 100%;
  height: 100%;
}

.indicatorDots {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.indicatorDots view {
  width: 20rpx;
  height: 20rpx;
  background: #999;
  border-radius: 20rpx;
  float: left;
  margin: 0 10rpx;
}

.indicatorDots view.active {
  width: 36rpx;
  background: #333999;
}

.head-box {
  padding: 10rpx;
  box-sizing: border-box;
}

.flex-box-row {
  display: flex;
  flex-direction: row;
  flex-flow: nowrap;
}

.topBox {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
}

.topBox .left-box {
  flex: 3;
}

.topBox .right-box {
  flex: 5;
  border-left: 10rpx solid white;
}

.topBox image {
  width: 100%;
  height: 100%;
}

.right-box image {
  height: 146rpx;
}

.btmBox {
  height: 140rpx;
}

.btmBox image {
  width: 100%;
  height: 100%;
}

.btmBox .left {
  flex: 7;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.btmBox .right {
  flex: 3;
  box-sizing: border-box;
}

/* ----------------------------------------         头部样式 结束 */

/* ----------------------------------------         中间栏样式 开始 */

.center-box {
  margin-top: 20rpx;
}

.box-item-One {
  height: 400rpx;
}

.line-titile {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.line-titile::before {
  content: "";
  display: block;
  border: 3rpx solid #ccc;
  width: 20rpx;
  position: absolute;
  left: 35%;
  top: 46rpx;
}

.line-titile::after {
  content: "";
  display: block;
  border: 3rpx solid #ccc;
  width: 20rpx;
  position: absolute;
  right: 35%;
  top: 46rpx;
}

.box-item-One scroll-view {
  height: 300rpx;
  white-space: nowrap;
}

.scroll-item {
  width: 300rpx;
  display: inline-block;
  height: 250rpx;
  margin: 10rpx;
  box-shadow: 2rpx -2rpx 10rpx rgba(128, 128, 128, 0.6);
  border-radius: 10rpx;
  overflow: hidden;
}

.scroll-item image {
  height: 200rpx;
}

.scroll-item text {
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  width: 100%;
  color: gray;
  font-size: 24rpx;
}

.center-swiper{
  height: 460rpx;
}
.goods-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap ; 
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
}
.goods-item{
  margin-top: 25rpx;
  width: 48%;
  height: 360rpx;
  box-shadow: 2rpx 2rpx 10rpx rgba(128, 128, 128, 0.8);
  box-sizing: border-box;
  border-radius: 5rpx;
  overflow: hidden
} 
.goods-item image{
  height:320rpx;
  width: 100%;
}
.goods-item text{
  width: 100%;
  background: white;
  text-align: center;
  display: block;
  height:40rpx;
  line-height: 30rpx;
  color: gray;
  font-size: 24rpx;
}
/* ----------------------------------------         中间栏样式 结束 */
